<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewveg_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageViewveg_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="#111"

                />


            <TextView
                android:id="@+id/textViewveg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomato"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageViewveg_image"
                />
            <TextView
                android:id="@+id/textViewveg_price"
                android:text="Rs. 5/KG"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_alignBottom="@id/imageViewveg_image"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_below="@id/imageViewveg_image"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textViewveg_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textSize="25sp"
                    android:textColor="#111"

                    />
                <Button
                    android:id="@+id/buttonPlus_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:background="@drawable/roundbutton"

                    />
                <TextView
                    android:id="@+id/textViewveg_qtynumber"
                    android:textColor="#111"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    />
                <Button
                    android:id="@+id/buttonMinus_button"
                    android:background="@drawable/roundbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="-"
                    />


            </LinearLayout>



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>